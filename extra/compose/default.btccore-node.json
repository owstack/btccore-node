{
  "network": "livenet",
  "port": 3001,
  "services": [
    "explorer-api",
    "bitcoind",
    "web"
  ],
  "servicesConfig": {
    "bitcoind": {
      "spawn": {
        "datadir": "/data",
        "exec": "/usr/local/lib/node_modules/btccore-node/bin/bitcoind"
      }
    },
    "explorer-api": {
      "module": "btccore-explorer-api",
      "apiPrefix": "explorer-api"
    }
  }
}
